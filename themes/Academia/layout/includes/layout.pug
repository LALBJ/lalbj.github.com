doctype html
html(lang=config.language)
    head
        meta(charset='UTF-8')
        meta(http-equiv="X-UA-Compatible" content="IE=edge")
        meta(name="viewport" content="width=device-width, initial-scale=1, maximum-scale=5")
        // begin SEO
        title=config.title
        meta(property="og:site_name" content=config.site_name)
        meta(property="og:author" content=config.author)
        link(rel="canonical" href=config.canonical)
        meta(property="og:url" content=config.url)
        meta(property="og:description", content=config.description)
        meta(name="google-site-verification" content="qVCzJaGkx9OyBM04xGt0ql8QeTxBGvAHwrz9cbc4iLI")
        // end SEO

        !=favicon_tag(config.favicon || theme.favicon || '/favicon.ico')
        each item in theme.CDN_USE.css
            link(rel='stylesheet', href=url_for(item))
    body
        header#page_header
            include ./header.pug
        main#page_main
            include ./side-card.pug
            block content
        include ./mobile-nav.pug
        footer#page_footer
            include ./footer.pug
        each item in theme.CDN_USE.js
            script(src=url_for(item))